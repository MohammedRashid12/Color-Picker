{
    "manifest_version": 2,
    "name": "Color Picker",
    "version": "1.0",
    "description": "Change the background color using a color picker",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
      }
    ]
  }